{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"types": ["astro/client"],
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@/components/*": ["./src/components/*"],
			"@/lib/*": ["./src/lib/*"],
			"@/hooks/*": ["./src/hooks/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules"]
}
