---
import Layout from "./layout.astro";
import Navigation from "../components/Navigation.astro";

export interface Props {
	title: string;
	date: string;
	tag: string;
	intro: string;
	frontmatter?: {
		title: string;
		date: string;
		tag: string;
		intro: string;
	};
}

const { title, date, tag, intro } = Astro.props.frontmatter || Astro.props;
---

<Layout title={`${title} - Zabaca Press`}>
  <main class="zabaca-inspired">
    <Navigation activePage="press" />

    <!-- Article content -->
    <article class="press-article">
      <div class="article-container">
        <!-- Back to press link -->
        <a href="/press" class="back-link">← Back to Press</a>

        <!-- Article header -->
        <header class="article-header">
          <div class="article-meta">
            <time datetime={date}>{new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
            <span class="meta-separator">•</span>
            <span class="article-tag">{tag}</span>
          </div>
          <h1>{title}</h1>
          <p class="article-intro">{intro}</p>
        </header>

        <!-- Article body -->
        <div class="article-content">
          <slot />
        </div>

        <!-- Share section -->
        <div class="share-section">
          <h3>Share this article</h3>
          <div class="share-buttons">
            <a href="#" class="share-button twitter">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a href="#" class="share-button linkedin">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            </a>
            <a href="#" class="share-button copy">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </article>

    <!-- Related articles -->
    <section class="related-section">
      <div class="related-container">
        <h2>More from Press</h2>
        <div class="related-grid">
          <article class="related-card">
            <a href="/press/series-a-funding">
              <div class="related-image">
                <div class="placeholder-image" style="background: linear-gradient(135deg, #ff843f, #ffb380);">
                  <svg viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                    <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6" />
                  </svg>
                </div>
              </div>
              <div class="related-content">
                <time>December 15, 2024</time>
                <h3>Zabaca Raises $25M Series A to Expand AI Business Directory</h3>
              </div>
            </a>
          </article>

          <article class="related-card">
            <a href="/press/partnership-stripe">
              <div class="related-image">
                <div class="placeholder-image" style="background: linear-gradient(135deg, #ff843f, #ffb380);">
                  <svg viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" />
                  </svg>
                </div>
              </div>
              <div class="related-content">
                <time>November 8, 2024</time>
                <h3>Zabaca Partners with Stripe for Seamless Payment Integration</h3>
              </div>
            </a>
          </article>

          <article class="related-card">
            <a href="/press/ai-agents-report">
              <div class="related-image">
                <div class="placeholder-image" style="background: linear-gradient(135deg, #4ff37d, #2de05a);">
                  <svg viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                    <path d="M9 11H3v10h6V11zM15 3H9v18h6V3zM21 7h-6v14h6V7z" />
                  </svg>
                </div>
              </div>
              <div class="related-content">
                <time>October 22, 2024</time>
                <h3>New Report: AI Agents Will Handle 40% of Business Interactions by 2026</h3>
              </div>
            </a>
          </article>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Import web fonts */
  @import url('https://fonts.googleapis.com/css2?family=Fredoka:wght@300;400;500;600;700&display=swap');
  
  /* Modern design base styles */
  .zabaca-inspired {
    font-family: 'Fredoka', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #131416;
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    background-color: white;
    min-height: 100vh;
  }


  /* Article styles */
  .press-article {
    margin-top: 120px;
    padding-bottom: 4rem;
  }

  .article-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #666;
    text-decoration: none;
    font-weight: 500;
    margin-bottom: 2rem;
    transition: all 0.3s ease;
  }

  .back-link:hover {
    color: #131416;
    transform: translateX(-4px);
  }

  /* Article header */
  .article-header {
    margin-bottom: 3rem;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    color: #666;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .meta-separator {
    opacity: 0.5;
  }

  .article-tag {
    background-color: #ff00b8;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .article-header h1 {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: #131416;
    letter-spacing: -0.03em;
  }

  .article-intro {
    font-size: 1.5rem;
    line-height: 1.5;
    color: #666;
    font-weight: 500;
  }

  /* Article content */
  .article-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #131416;
  }

  /* Markdown content styles */
  .article-content :global(p) {
    margin-bottom: 1.75rem;
  }

  .article-content :global(h2) {
    font-size: 2.5rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    color: #131416;
    letter-spacing: -0.02em;
  }

  .article-content :global(h3) {
    font-size: 1.75rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #131416;
  }

  .article-content :global(strong) {
    font-weight: 600;
    color: #131416;
  }

  .article-content :global(blockquote) {
    margin: 3rem 0;
    padding: 2rem 0;
    border-top: 3px solid #4ff37d;
    border-bottom: 3px solid #4ff37d;
    text-align: center;
  }

  .article-content :global(blockquote p) {
    font-size: 1.75rem;
    font-weight: 600;
    font-style: italic;
    color: #131416;
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  .article-content :global(blockquote p:last-child) {
    font-size: 1.125rem;
    font-weight: 500;
    font-style: normal;
    color: #666;
    margin-bottom: 0;
  }

  /* Custom styles for specific content */
  .article-content :global(.press-release-header) {
    margin-bottom: 2rem;
  }

  .article-content :global(.release-badge) {
    background-color: #131416;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    display: inline-block;
  }

  .article-content :global(.testimonial-box) {
    background: linear-gradient(135deg, #00c2ff 0%, #00a8e6 100%);
    color: white;
    padding: 2.5rem;
    border-radius: 24px;
    margin: 2rem 0;
    transform: rotate(-1deg);
    transition: transform 0.3s ease;
  }

  .article-content :global(.testimonial-box:hover) {
    transform: rotate(0deg) scale(1.02);
  }

  .article-content :global(.testimonial-box p) {
    color: white;
    font-size: 1.25rem;
    font-weight: 500;
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .article-content :global(.testimonial-box p:last-child) {
    font-weight: 600;
    opacity: 0.9;
    font-size: 1rem;
    margin-bottom: 0;
  }

  .article-content :global(.press-contact) {
    margin-top: 4rem;
    padding: 2rem;
    background-color: #f8f8f8;
    border-radius: 20px;
    text-align: center;
  }

  .article-content :global(.press-contact h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #131416;
  }

  .article-content :global(.press-contact p) {
    margin-bottom: 1.5rem;
    color: #666;
    line-height: 1.6;
  }

  .article-content :global(.press-contact a) {
    color: #131416;
    font-weight: 600;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .article-content :global(.press-contact a:hover) {
    opacity: 0.7;
  }

  /* Share section */
  .share-section {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid #f0f0f0;
    text-align: center;
  }

  .share-section h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #131416;
  }

  .share-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .share-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: #f0f0f0;
    color: #131416;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .share-button:hover {
    transform: scale(1.1);
  }

  .share-button.twitter:hover {
    background-color: #000;
    color: white;
  }

  .share-button.linkedin:hover {
    background-color: #0077b5;
    color: white;
  }

  .share-button.copy:hover {
    background-color: #4ff37d;
    color: #131416;
  }

  .share-button svg {
    width: 20px;
    height: 20px;
  }

  /* Related section */
  .related-section {
    background-color: #f8f8f8;
    padding: 4rem 0;
    margin-top: 4rem;
    border-top-left-radius: 50% 60px;
    border-top-right-radius: 50% 60px;
  }

  .related-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .related-section h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 3rem;
    text-align: center;
    color: #131416;
    letter-spacing: -0.02em;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .related-card {
    background-color: white;
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .related-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.1);
  }

  .related-card a {
    text-decoration: none;
    color: inherit;
  }

  .related-image {
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-image svg {
    width: 60px;
    height: 60px;
    opacity: 0.8;
  }

  .related-content {
    padding: 1.5rem;
  }

  .related-content time {
    color: #666;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .related-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
    margin-top: 0.5rem;
    color: #131416;
    letter-spacing: -0.01em;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .article-header h1 {
      font-size: 2.5rem;
    }

    .article-intro {
      font-size: 1.25rem;
    }

    .article-content :global(blockquote p) {
      font-size: 1.5rem;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>